# Production Environment Variables
# Copy this file to .env.production.local for local production testing

# Database Configuration (Production)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_PRODUCTION_PRISMA_API_KEY"
DIRECT_DATABASE_URL="postgresql://postgres:YOUR_PRODUCTION_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PRODUCTION_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_PRODUCTION_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_PRODUCTION_SUPABASE_SERVICE_ROLE_KEY

# API Keys (Production)
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_PRODUCTION_ANTHROPIC_API_KEY
RESEND_API_KEY=re_YOUR_PRODUCTION_RESEND_API_KEY

# Monitoring (Production)
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN
SENTRY_ENVIRONMENT=production

# Analytics (Production)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=YOUR_ANALYTICS_ID
